    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="?attr/colorPrimary"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <Button
            android:id="@+id/category_btn"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"></Button>

        <Button
            android:id="@+id/date_btn"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/category_btn"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"></Button>

        <Button
            android:id="@+id/details_btn"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="end"

            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toEndOf="@+id/date_btn"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"></Button>
    </androidx.appcompat.widget.Toolbar>

    <TextView
     android:id="@+id/total_spending"
     android:layout_width="match_parent"
     android:layout_marginTop="116dp"
     android:layout_height="50dp"
     app:layout_constraintTop_toBottomOf="@+id/toolbar"
     tools:layout_editor_absoluteX="0dp"
     android:gravity="center_horizontal"
      />
 <TextView
     android:id="@+id/amount"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:layout_marginTop="50dp"
     app:layout_constraintTop_toBottomOf="@+id/total_spending"
     tools:layout_editor_absoluteX="0dp"
     android:gravity="center_horizontal"
     />
 <TextView
     android:id="@+id/over_under"
     android:layout_width="match_parent"
     android:layout_marginTop="50dp"
     android:layout_height="50dp"
     app:layout_constraintTop_toBottomOf="@+id/amount"
     tools:layout_editor_absoluteX="0dp"
     android:gravity="center_horizontal"
     />
 <TextView
     android:id="@+id/current_date"
     android:layout_width="match_parent"
     android:layout_marginTop="50dp"
     android:layout_height="50dp"
     app:layout_constraintTop_toBottomOf="@+id/over_under"
     tools:layout_editor_absoluteX="0dp"
     android:gravity="center_horizontal"
     />




 <androidx.appcompat.widget.Toolbar
     android:id="@+id/app_bar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/current_date"
     app:layout_constraintVertical_bias="1.0"
     tools:layout_editor_absoluteX="0dp">

  <Button
      android:id="@+id/done"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:text="@string/DONE" />
 </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>